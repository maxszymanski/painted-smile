---
import data from '../data/opinions.js'
import Opinion from './Opinion.astro'
---

<section class="bg-mycardblue px-4 py-12 pr-0 md:px-8 lg:py-16 xl:py-24">
    <div class="container mx-auto">
        <h2
            class="mb-12 text-4xl font-medium text-myblue lg:text-5xl xl:mb-20 2xl:text-6xl"
        >
            Co klienci piszÄ…
        </h2>
        <div>
            <div class="flex overflow-x-auto">
                {
                    data.map((item) => (
                        <Opinion
                            name={item.name}
                            opinion={item.opinion}
                            date={item.date}
                        />
                    ))
                }
            </div>
        </div>
    </div>
</section>
