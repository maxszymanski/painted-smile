---
import cards from '../data/cards'
import OffersCard from './OffersCard.astro'
---

<section
    id="oferta"
    class="container mx-auto px-4 py-12 lg:py-16 xl:py-24 3xl:px-0"
>
    <h2
        class="mb-16 text-4xl font-medium text-myblue lg:text-5xl xl:mb-20 2xl:pl-4 2xl:text-6xl 3xl:pl-0"
    >
        Nasze us≈Çugi
    </h2>
    <div
        class="flex flex-col items-center gap-5 space-y-16 xs:pb-4 md:flex-row md:flex-wrap md:items-stretch md:justify-evenly md:gap-10 md:space-y-0 xl:gap-20 xl:pb-0 2xl:gap-x-8 3xl:gap-x-10"
    >
        {
            cards.map((card) => (
                <OffersCard
                    bg={card.bg}
                    icon={card.icon}
                    altText={card.altText}
                    title={card.title}
                    priceOne={card.priceOne}
                    priceTwo={card.priceTwo}
                    pin={card.pin}
                    text={card.text}
                    className={card.className}
                    more={card?.more}
                />
            ))
        }
    </div>
</section>
