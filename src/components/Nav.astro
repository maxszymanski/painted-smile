        <li class="item flex justify-center">
            <a class="p-3" href="/#o-nas">O nas</a>
        </li>
        <li class="item flex justify-center">
            {
                mainPage ? (
                    <a class="p-3" href="/galeria">
                        Galeria
                    </a>
                ) : (
                    <a class="p-3" href="/#oferta">
                        Oferta
                    </a>
                )
            }
