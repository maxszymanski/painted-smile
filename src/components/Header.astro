---
import { Image } from 'astro:assets'
import '@fontsource/love-ya-like-a-sister'
import logoSmall from '../images/header/logo-small.png'
import logoBig from '../images/header/logo-big.png'
import vectorPink from '../images/header/vector-pink.png'
import vectorBlue from '../images/header/vector-blue.png'

const link = {
    to: '#oferta',
    text: 'Nasze oferty',
}
---

<header
    class="relative flex h-[100svh] flex-col items-center justify-center overflow-hidden bg-bg-small bg-cover bg-center px-4 xs:min-h-[500px] lg:bg-bg-big"
>
    <Image
        class="absolute -left-2 bottom-2 z-0 hidden h-56 w-56 rotate-12 sm:-top-2 sm:left-4 sm:block sm:h-60 sm:w-60 md:left-10 md:h-80 md:w-80 lg:h-96 lg:w-96 3xl:h-[34rem] 3xl:w-[34rem]"
        src={vectorPink}
        alt=""
    />
    <Image
        class="absolute -right-2 bottom-2 z-0 hidden h-56 w-56 xs:block sm:h-60 sm:w-60 md:bottom-6 md:right-2 md:h-80 md:w-80 lg:h-96 lg:w-96 3xl:h-[34rem] 3xl:w-[34rem]"
        src={vectorBlue}
        alt=""
    />
    <Image
        class="relative z-10 w-80 px-4 lg:w-[32rem] lg:pt-20 xl:hidden"
        src={logoSmall}
        alt="Logo firmy"
    />
    <Image
        class="relative z-10 hidden w-[500px] px-4 xl:block xl:pt-20 3xl:w-[700px] 3xl:pt-12"
        src={logoBig}
        alt="Logo firmy"
    />
    <h1
        class="relative z-20 pb-10 pt-6 text-center font-love text-3xl font-bold uppercase text-mypink lg:pb-16 lg:pt-10 lg:text-5xl xl:pb-20 xl:pt-12 xl:text-6xl"
    >
        Animacje dla dzieci
    </h1>
    <div
        class="relative flex w-full max-w-xs flex-col items-center gap-y-6 px-4 xl:gap-y-8 2xl:max-w-sm"
    >
        <a
            href={link.to}
            class="w-full rounded-xl bg-mypink px-4 py-2 text-center text-2xl tracking-wide text-stone-100 transition-colors duration-300 hover:bg-mylightpink focus:outline-none focus:ring focus:ring-mylightpink focus:ring-offset-2"
            >{link.text}</a
        >
    </div>
</header>
